<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:backgroundTint="#FFD3D3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="12dp">

            <!-- Put a text as header -->
            <TextView
                android:id="@+id/popular_title"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="PUBG: BATTLEGROUNDS"
                android:textStyle="bold"
                android:layout_marginStart="1dp"
                android:textColor="@color/text_primary"
                android:textSize="18sp" />

            <!-- Put a text as description of header -->
            <TextView
                android:id="@+id/popular_category_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/popular_title"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="1dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Category : "
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/popular_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/popular_category_text"
                android:layout_alignParentStart="true"
                android:layout_marginTop="-8dp"
                android:layout_marginStart="1dp"
                android:fontFamily="@font/poppins_regular"
                android:text="fps, battle royale"
                android:textColor="@color/text_primary"
                android:textSize="10dp" />

            <ImageView
                android:id="@+id/popular_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="59dp"
                android:layout_toEndOf="@id/popular_title"
                android:scaleType="centerCrop"
                android:src="@drawable/calendar" />

            <TextView
                android:id="@+id/popular_avg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/popular_title"
                android:fontFamily="@font/poppins_regular"
                android:text="3.14"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>