<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:backgroundTint="#FFD3D3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="12dp">

            <!-- Put a text as header -->
            <TextView
                android:id="@+id/popular_title"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Friday Night Games"
                android:textColor="@color/text_primary"
                android:textSize="18sp" />

            <!-- Put a text as description of header -->
            <TextView
                android:id="@+id/popular_description"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/popular_title"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Join us every friday night in our discord server"
                android:textColor="@color/text_primary"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/popular_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:layout_toEndOf="@id/popular_title"
                android:layout_centerInParent="true"
                android:layout_marginStart="32dp"
                android:src="@drawable/calendar" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>